= render partial: 'shared/main_header'

.user_intro
  .profile-container
    .profile-head
      プロフィール
    .profile-icon
      .photo-box
        .user_image
      .profile_right    
        .nickname
          = current_user.nickname
        %ul.sell_info
          %li.title
            出品数
          %li.count
            25
    .profile-setting
      .profile-setting__text-box
        .introduction
          %p はじめまして！
          %br 未使用品を中心に出品をさせていただきます。
          %br 非喫煙者で、ペットも飼っておりません。
          %br 即購入は大歓迎です！
          %br よろしくお願いします。
    .sell-tab
      出品リスト
  
    .tab-area
      - @products.each do |product|
        %ul.list-show
          = link_to product_path(product) do
            %li.item
              .image-box
                .img
                  = image_tag product.images.first.src.url
              .name
                = product.name
              .updated
                = product.updated_at.strftime("%Y-%m-%d %H:%M") 

= render partial: 'shared/main_footer'        