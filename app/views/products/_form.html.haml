= form_for @product do |f|
  商品名#{f.text_field :name}
  %br/
  価格#{f.number_field :price}
  %br/
  説明#{f.text_field :description}
  %br/
  状態#{f.text_field :status}
  %br/
  サイズ#{f.text_field :size}
  %br/
  配送料#{f.text_field :shipping_cost}
  %br/
  配送日数#{f.text_field :shipping_days}
  %br/
  配送元地域#{f.text_field :prefecture_id}
  %br/
  ジャッジ#{f.text_field :judgment}
  %br/
  カテゴリー#{f.text_field :category_id}
  %br/
  ブランド#{f.text_field :brand_id}
  %br/
  配送会社#{f.text_field :shipping_id}
  %br/
  ユーザー#{f.text_field :user_id}
  %br/
  #image-box
    #previews
      - if @product.persisted?
        - @product.images.each_with_index do |image, i|
          = image_tag image.src.url, data: { index: i }, width: "100", height: '100'
    = f.fields_for :images do |image|
      .js-file_group{"data-index" => "#{image.index}"}
        = image.file_field :src, class: 'js-file'
        %br/
        %span.js-remove 削除
      - if @product.persisted?
        = image.check_box :_destroy, data:{ index: image.index }, class: 'hidden-destroy'
      - if @product.persisted?
        .js-file_group{"data-index" => "#{@product.images.count}"}
          = file_field_tag :src, name: "product[images_attributes][#{@product.images.count}][src]", class: 'js-file'
          .js-remove 削除
  = f.submit

  .post__drop__box__container
    .prev-content
    .label-content
      %label{for: "product[images_attributes][#{@product.images.count}][src]", class: "abel-box", id: "label-box--0"}
        %pre.label-box__text-visible クリックしてファイルをアップロード
    .hidden-content
      = f.fields_for :images do |i|
        = i.file_field :src, class: "hidden-field"
      = f.fields_for :images do |i|
        = i.file_field :src, class: "hidden-field"
  = f.submit "出品する"