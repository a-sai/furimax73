%html
  %head
    %title Furimax73
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body

    .Header
      .HeaderInner
        .HeaderMain
          .HeaderMain__logo
            = image_tag src="/assets//logo/logo.png"
          .HeaderMain__search-box
            .HeaderMain__search-box__input
              キーワードから探す
            -# = form_with(url: search_products_path, local: true, method: :get, class: "search-form") do |form|
            -#   = form.text_field :keyword, placeholder: “キーワードから探す”, class: "search-input"
            -#   = form.submit "検索", class: "search-btn"            
            .HeaderMain__search-box__decision
              .search-icon
                = image_tag src="/assets//icon/icon-search 1.png"
        .HeaderNav
          %ul.HeaderNav__lists--left
            %li.list--left
              カテゴリー
            %li.list--right
              ブランド
          %ul.HeaderNav__lists--right
            %li.list--left
              ログイン
            %li.list--right
              新規会員登録


    .footer
      %ul.contents
        %li.content
          %h2.content__head
            FURIMAについて
          %ul.content__list
            %li
              会社概要（運営会社）
            %li
              プライバシーポリシー
            %li
              FURIMA利用規約
            %li
            ポイントに関する特約
        %li.content
          %h2.content__head
            FURIMAを見る
          %ul.content__list
            %li
              カテゴリー一覧
            %li
              ブランド一覧
        %li.content
          %h2.content__head
            ヘルプ&ガイド
          %ul.content__list
            %li
              FURIMAガイド
            %li
              FURIMAロゴ利用ガイドライン
      .footer__logo
        = image_tag src="/assets//logo/logo-white.png"
      %p
        &copy; FURIMA
      .sell-btn
        %span.sell-btn__text
          出品する
        = image_tag src="/assets//icon/icon_camera.png"     
                    





    = yield
